{% extends 'da.html.twig' %}

{% block title %}Vote{% endblock %}

{% block body %}
<div style="padding-bottom: 5%;"></div>
    <h1>Vote</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vote.id }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>
                    {% set stars = '' %}
                    {% for i in 1..5 %}
                        {% if i <= vote.note %}
                            {% set stars = stars ~ '★' %}
                        {% else %}
                            {% set stars = stars ~ '☆' %}
                        {% endif %}
                    {% endfor %}
                    {{ stars }}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-info" href="{{ path('app_votes_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_votes_edit', {'id': vote.id}) }}">edit</a>

    {{ include('votes/_delete_form.html.twig') }}
{% endblock %}
