{% extends 'user.html.twig' %}

{% block title %}Competition{% endblock %}

{% block body %}
    <h1>Competition</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom</th>
                <td>{{ competition.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ competition.description }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{{ competition.datedebut ? competition.datedebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ competition.datefin ? competition.datefin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td> {% if competition.image %}
                    <img src="{{ asset('uploads/' ~ competition.image) }}" alt="{{ competition.nom }}" class="img-thumbnail" style="max-height: 50px;">
                {% else %}
                    No Image
                {% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_competition_prof_index') }}">back to list</a>

    <a href="{{ path('app_competition_prof_edit', {'id': competition.id}) }}">edit</a>

    {{ include('competition_prof/_delete_form.html.twig') }}
{% endblock %}
